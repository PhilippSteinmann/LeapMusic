{
    "name": "Leap Music",
    "version": "1.0",
    "manifest_version": 2,

    "description": "Control Spotify with your Leap Motion.",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery-2.1.3.min.js", "leap.min.js", "content_script.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
  },

    "permissions": [
        "<all_urls>",
	"background"
    ]
}
