{
    "name": "Leap Music",
    "version": "1.0",
    "manifest_version": 2,

    "description": "Control Spotify with your Leap Motion.",

    "content_scripts": [
        {
            "matches": ["*://play.spotify.com/*"],
            "js": ["jquery-2.1.3.min.js", "content_script.js" ]
        }
    ],

    "background": {
        "scripts": ["leap.min.js","code.js"]
  },

    "permissions": [
       "*://play.spotify.com/*",
	"background"
    ]
}
